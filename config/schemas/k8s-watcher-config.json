{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Traceable/agent-config/schema/k8s-watcher-config.json",
  "type": "object",
  "required": [
    "reporting"
  ],
  "properties": {
    "logging": {
      "$ref": "./agent-config.json#/definitions/logging",
      "type": "object"
    },
    "reporting": {
      "$ref": "./agent-config.json#/definitions/reporting",
      "type": "object"
    },
    "kubernetes": {
      "type": "object",
      "properties": {
        "in_cluster": {
          "type": "boolean",
          "default": true
        },
        "cluster_name": {
          "type": "string"
        }
      }
    }
  }
}